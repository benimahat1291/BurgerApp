<div class="container">
    <h1 class="title">Your Personal Burger Bistro!</h1>

    <div class="addform">
        <h2>Add a burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
                <label for="devoured">devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> devoured!<br>
                <input type="radio" name="devoured" value="0"> Ready to eat!
            </div>
            <button type="submit">Add burger</button>
        </form>
    </div>




    <div class="row">
        <div class="col-6">
            <div class="notdevoured">
                <h2 class="title">These burgeres are ready to eat!</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="col-6">
            <div="devoured">
                <h2 class="title">These burgers have already been eaten... Order agian?</h2>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
        </div>
    </div>

</div>